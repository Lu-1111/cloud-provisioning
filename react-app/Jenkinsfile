//FIXUP DOCKER BUILD STAGE AS ITS NOT READING THE DOCKERFILE


def registry = 'europe-west1-docker.pkg.dev/interview-prj1/web'

pipeline {
  agent any
  environment {
    SECRET_FILE = credentials('my-creds')
    PROJECT_ID = 'interview-prj1'
    CLUSTER_NAME = 'interview-prj1-cluster'
    LOCATION = 'europe-west1'
    CREDENTIALS_ID = 'interview-prj1-sa'
  }
  stages {
    stage ('check '){
      steps{
        script {
          sh '''
            which docker
            pwd
            ls -ltra
          '''
        }
      }
    }
    stage('Build image') {
      steps{
        script {
         sh '''
           docker build  --tag 'react-app' -f ./react-app/Dockerfile .
          '''
        }
      }
    }
    stage('Test image'){
      steps{
        script {
          sh '''
          docker run -e CI=true react-app npm run --rm test
          '''
        }
      }
    }
    stage('Pushing Image') {
      steps{
        script {

           sh  '''
           gcloud auth activate-service-account --key-file=$SECRET_FILE
           gcloud auth configure-docker europe-west1-docker.pkg.dev
            docker tag react-app europe-west1-docker.pkg.dev/interview-prj1/web/react-app
            docker image push europe-west1-docker.pkg.dev/interview-prj1/web/react-app
            '''
        }
      }
    }
    stage('Deploying React.js container to Kubernetes') {
      steps {
        script {
                step([
                $class: 'KubernetesEngineBuilder',
                projectId: env.PROJECT_ID,
                clusterName: env.CLUSTER_NAME,
                location: env.LOCATION,
                manifestPattern: 'react-app/deployment.yaml',
                credentialsId: env.CREDENTIALS_ID,
                verifyDeployments: true])
        }
      }
    }
  }
}


pipeline{
    agent any 
    stages{
        stage ("Install Helm Chart"){
            steps{
                
                script{
                    sh '''
                    export KUBECONFIG=$HOME/.kube/config
                    helm install react-app-helm ./helm-chart/react-app-helm --namespace react-app-helm 
                    '''
                }

            }
        }
